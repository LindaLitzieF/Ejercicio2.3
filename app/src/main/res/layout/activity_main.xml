<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0D0D"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/foto"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:background="#262726"
        app:srcCompat="@android:drawable/ic_menu_gallery" />


    <Button
        android:id="@+id/btnFoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#5E35B1"
        android:drawableLeft="@android:drawable/ic_menu_gallery"
        android:text="Tomar Foto"
        app:layout_constraintTop_toBottomOf="@+id/foto"
        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFoto"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/txtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#9ED3DA"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Escribir aqui"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        tools:layout_editor_absoluteX="55dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#5E35B1"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:text="GUARDAR"
        app:layout_constraintTop_toBottomOf="@+id/txtDescripcion"
        tools:layout_editor_absoluteX="61dp" />


    <Button
        android:id="@+id/btnImagenes"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:backgroundTint="#5E35B1"
        android:drawableLeft="@android:drawable/ic_dialog_dialer"
        android:text="LISTA"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardar"
        tools:layout_editor_absoluteX="0dp" />


</LinearLayout>